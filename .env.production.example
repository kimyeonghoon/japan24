# Production Environment Configuration Template
# Copy this file to .env and update values for production deployment

APP_NAME="24명성 인증 앱"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=ko
APP_FALLBACK_LOCALE=ko
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single,stderr
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=sqlite
# For production with MySQL/PostgreSQL:
# DB_CONNECTION=mysql
# DB_HOST=db_host
# DB_PORT=3306
# DB_DATABASE=castle24_prod
# DB_USERNAME=castle24_user
# DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Session Configuration (Redis recommended for production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

# Cache Configuration (Redis for production)
CACHE_STORE=redis
CACHE_PREFIX=castle24_

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.yourmailserver.com
MAIL_PORT=587
MAIL_USERNAME=notifications@yourdomain.com
MAIL_PASSWORD=CHANGE_THIS_MAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="notifications@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-northeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Security Headers
SECURE_HEADERS_ENABLE=true
SECURE_HEADERS_HSTS_MAX_AGE=31536000
SECURE_HEADERS_HSTS_INCLUDE_SUBDOMAINS=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_DECAY_MINUTES=1

# Monitoring (optional)
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Backup Configuration
BACKUP_NOTIFICATIONS_MAIL_TO=admin@yourdomain.com
BACKUP_NOTIFICATIONS_SLACK_WEBHOOK_URL=